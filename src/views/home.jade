script(id="home", type="text/x-template")
  div(class="mdl-grid tools")
    div(class="mdl-cell mdl-cell--4-col mdl-cell--4-col-tablet mdl-cell--4-col-phone" v-for="tool in tools")
      div(class="mdl-card mdl-shadow--2dp")
        div(class="mdl-card__title mdl-card--expand")
          h2(class="mdl-card__title-text") {{ tool.name }}
        div(class="mdl-card__supporting-text" title="{{ tool.description }}") {{ tool.description }}
        div(class="mdl-card__actions mdl-card--border")
          a(class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect", href="{{ tool.url }}") Use This
